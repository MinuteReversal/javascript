{
  "version": "0.2.0",
  "configurations": [
    {
      //https://github.com/Microsoft/vscode-chrome-debug
      "name": "Launch Chrome(local)",
      "type": "chrome",
      "request": "launch",
      "file": "${file}",
      "runtimeArgs": [
        "--disable-web-security"
      ],
     "webRoot": "${workspaceRoot}"
    },
    {
      //https://github.com/Microsoft/vscode-chrome-debug
      "name": "Launch Edge(local)",
      "type": "msedge",
      "request": "launch",
      "file": "${file}"
    },
    {
      "name": "Launch Chrome(network)",
      "request": "launch",
      "type": "chrome",
      "url": "http://192.168.31.171/js/${relativeFile}",
      "webRoot": "${cwd}"
    },
  ]
}
